{
    "compilerOptions": {
        "strict": true,
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "__pages/*": ["./src/pages/*"],
            "__components/*": ["./src/components/*"],
            "__utils/*": ["./src/utils/*"],
            "__types/*": ["./src/types/*"],
            "__store/*": ["./src/store/*"],
            "__selectors/*": ["./src/selectors/*"],
            "__commonActions": ["./src/commonActions.ts"],
        }
    }
}
