{
    "compilerOptions": {
        "strict": true,
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "__pages/*": ["./src/pages/*"],
            "__components/*": ["./src/components/*"],
        }
    }
}
